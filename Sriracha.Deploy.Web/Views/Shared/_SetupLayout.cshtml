<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	@Styles.Render("~/styles/bootstrap")
    @Styles.Render("~/styles/sriracha")
    @Styles.Render("~/styles/jquery-ui")
	<style>
	</style>
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
				<button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="brand" href="#">Sriracha Deployment System</a>
			</div>
		</div>
	</div>
	<div style="height:50px">&nbsp;</div>
	<div class="container" style="min-height:500px">

		@RenderBody()

		@RenderSection("scripts", required: false)
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/underscore")
		@Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/angular")
        @Scripts.Render("~/bundles/angular-ui-bootstrap")
		@Scripts.Render("~/bundles/sriracha")
	</div>
	<div class="container">
		<footer>
			<p>© MMDB Solutions, LLC 2013</p>
		</footer>
	</div>
</body>
</html>

