              <button type="submit" class="btn">Sign in</button>
            </form>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
	<div style="height:50px">&nbsp;</div>
	<div class="container" style="min-height:500px">

    @RenderBody()

    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/js")
	@Scripts.Render("~/bundles/bootstrap")
	@Scripts.Render("~/Scripts/underscore.js")
	@Scripts.Render("~/Scripts/angular/angular.js")
	@Scripts.Render("~/Scripts/angular/angular-resource.js")
	@Scripts.Render("~/Scripts/angular/ng-upload.js")
	@Scripts.Render("~/Scripts/ace/ace.js")
	@Scripts.Render("~/Scripts/ace/ui-ace.js")
	@Scripts.Render("~/Scripts/sriracha/shared.js")
	@Scripts.Render("~/Scripts/sriracha/navigation.js")
	@Scripts.Render("~/Scripts/sriracha/ngSriracha.js")
	@Scripts.Render("~/Scripts/sriracha/router.js")
	@Scripts.Render("~/Scripts/sriracha/navigationFactory.js")
	@Scripts.Render("~/Scripts/sriracha/projectController.js")
	@Scripts.Render("~/Scripts/sriracha/buildController.js")
	@Scripts.Render("~/Scripts/sriracha/deployController.js")
	</div>
	<div class="container">
      <footer>
        <p>© MMDB Solutions, LLC 2013</p>
      </footer>
	</div>
